<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="286dp"
    android:layout_height="wrap_content"
    android:background="@drawable/xc_dd_bg_white_ffffff_5"
    android:orientation="vertical" >
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        >
    <TextView
        android:id="@+id/xc_id_dialog_input_title"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"

        android:textColor="@color/c_gray_333333"
        android:textSize="16sp" />
        <TextView
            android:id="@+id/xc_id_dialog_input_title_right"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/c_gray_333333"
            android:visibility="gone"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:id="@+id/xc_id_dialog_input_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_gray_bebebe"
        android:visibility="gone" />

    <EditText
        android:id="@+id/xc_id_dialog_input_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:paddingBottom="25dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="5dp"
        android:maxLength="200"
        android:textColor="@color/c_gray_666666"
        android:background="@drawable/xl_dd_line_gray_bebebe_bg_white_0"
        android:textSize="16sp" />

    <View
        android:id="@+id/xc_id_dialog_input_body_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_gray_bebebe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/xc_id_dialog_input_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_trans"
            android:textColor="@drawable/xl_dd_selector_text_black"
            android:textSize="16sp" />

        <View
            android:id="@+id/xc_id_dialog_input_button_between_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/c_gray_bebebe" />

        <Button
            android:id="@+id/xc_id_dialog_input_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_trans"
            android:textColor="@drawable/xl_dd_selector_text_blue_1988ea"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>