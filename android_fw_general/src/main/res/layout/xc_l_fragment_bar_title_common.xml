<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/xc_id_titlebar_common_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@color/c_blue_288de5"
    >

    <LinearLayout
        android:id="@+id/xc_id_titlebar_left_layout"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/xc_id_titlebar_left_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@drawable/xc_d_arrow_left_back"/>

        <TextView
            android:id="@+id/xc_id_titlebar_left_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="返回"
            android:textColor="@drawable/sk_dd_selector_text_red_f44679"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/xc_id_titlebar_center_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:maxLength="10"
        android:textColor="#ffffff"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/xc_id_titlebar_right_layout"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/xc_id_titlebar_right_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xc_id_titlebar_right2_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/xc_id_titlebar_right_layout"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/xc_id_titlebar_right2_textview"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:gravity="center_vertical|right"
            android:textColor="@drawable/sk_dd_selector_text_red_f44679"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/xc_id_titlebar_right2_imageview_layout"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/xc_id_titlebar_right2_imageview"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/xc_id_titlebar_right3_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/xc_id_titlebar_right_layout"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/xc_id_titlebar_right3_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/xc_id_titlebar_right3_textview_number"
            style="@style/shape_round_bg_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/xc_id_titlebar_right3_imageView"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>