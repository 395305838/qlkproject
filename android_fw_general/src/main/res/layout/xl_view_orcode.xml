<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="500dp"
              android:gravity="center"
              android:orientation="vertical">


    <ScrollView
        android:id="@+id/sc_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_titile"
                style="@style/text_size_title_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="titile"
                android:visibility="gone"
                />

            <FrameLayout
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/c_white_ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/iv_img"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_launcher"
                            android:scaleType="fitXY"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/tv_name"
                                style="@style/text_size_normal_gray_6a6a6a"
                                android:textColor="@color/c_gray_666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text=""
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_dep"
                                    style="@style/text_size_small_gray_6a6a6a"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text=""
                                    />

                                <TextView
                                    android:id="@+id/line1"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/c_gray_d8d8d8"

                                    />

                                <TextView
                                    android:id="@+id/tv_job"
                                    style="@style/text_size_small_gray_6a6a6a"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1.0"
                                    android:text=""
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_hospital"
                                style="@style/text_size_small_gray_6a6a6a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/c_gray_ebebeb"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_orcode"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            />

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/c_gray_ebebeb"/>

                    <TextView
                        android:id="@+id/tv_intro"
                        style="@style/text_size_normal_gray"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="10dp"
                        android:text="使用微信扫一扫"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_bs"
                    android:layout_width="53dp"
                    android:layout_height="53dp"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        />
</FrameLayout>