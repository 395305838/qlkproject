<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xc_id_model_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white_ffffff" >

    <!-- 内容 -->

    <RelativeLayout
        android:id="@+id/xc_id_model_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_red_ff0000"
        android:visibility="invisible" >

        <Button
            android:id="@+id/dialog1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="dialog1" />

        <Button
            android:id="@+id/dialog2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/dialog1"
            android:text="dialog2" />

        <Button
            android:id="@+id/dialog3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/dialog2"
            android:text="dialog3" />

        <Button
            android:id="@+id/dialog4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/dialog3"
            android:text="dialog3" />
    </RelativeLayout>

</RelativeLayout>