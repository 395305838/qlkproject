<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xc_id_model_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white_ffffff">

    <!-- title -->

    <RelativeLayout
        android:id="@+id/xc_id_model_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/c_red_ff0000"
        android:visibility="gone"></RelativeLayout>

    <!-- 内容 -->

    <LinearLayout
        android:id="@+id/xc_id_model_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xc_id_model_titlebar"
        android:orientation="vertical"
        android:background="@color/c_blue_288de5">

        <TextView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:lineSpacingMultiplier="1.2"
            android:id="@+id/stack_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/to_main_activity"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="toMainActivity" />

        <Button
            android:id="@+id/to_search_activity1"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="toSearchActivity1" />

        <Button
            android:id="@+id/to_search_activity2"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="toSearchActivity2" />
        <Button
            android:id="@+id/finish_activity"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="finish_activity" />

        <Button
            android:id="@+id/finish_activity2"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="finish_activity2" />

        <Button
            android:id="@+id/finish_current_activity"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="finish_current_activity" />

        <Button
            android:id="@+id/finish_all_activity"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="finish_all_activity" />


    </LinearLayout>

    <!-- 无网络的背景 -->

    <include
        android:id="@+id/xc_id_model_no_net"
        layout="@layout/xc_l_view_no_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xc_id_model_titlebar"
        android:visibility="invisible" />

</RelativeLayout>
