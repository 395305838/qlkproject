<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/xc_id_adapter_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2015-4-16"
        android:gravity="center"
        android:textSize="17sp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_gravity="center" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/xc_id_adapter_left_head"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/xc_id_adapter_left_content"
            android:layout_toRightOf="@+id/xc_id_adapter_left_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textColor="@color/c_black_000000"
            android:text="#这是测试内容这是测试内容这是测试内容这是测试内容这是测试内容这是测试内容"
            android:background="@drawable/qlk_d_message_left1" />

        <ImageView
            android:id="@+id/xc_id_adapter_left_content_imageview"
            android:layout_toRightOf="@+id/xc_id_adapter_left_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>