<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/c_blue_288de5"
    android:gravity="center"
    android:orientation="vertical">
    <!-- 背景为透明的黑色 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/move_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="00:00:00"
            android:textColor="@color/c_white_ffffff" />
        <!-- 设置thumb -->
        <SeekBar
            android:id="@+id/time_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dip"
            android:layout_weight="1"
            android:maxHeight="3dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:thumb="@drawable/xc_dd_seek_thumb" />

        <TextView
            android:id="@+id/duration_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:text="00:00:00"
            android:textColor="@color/c_white_ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0000003D"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#0000003D"
            android:scaleType="fitCenter"
            android:src="@drawable/xc_dd_displaymode_fullscreen" />

        <ImageButton
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#0000003D"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/xc_dd_stepbackward" />

        <ImageButton
            android:id="@+id/pause_or_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000003D"
            android:scaleType="fitCenter"
            android:src="@drawable/xc_dd_play" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#0000003D"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:src="@drawable/xc_dd_stepforward" />

        <ImageButton
            android:id="@+id/volumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#0000003D"
            android:scaleType="fitCenter"
            android:src="@drawable/xc_dd_soundcontrol" />
    </LinearLayout>

</LinearLayout>