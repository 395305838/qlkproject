<?xml version="1.0" encoding="utf-8"?>
<!-- 
android:shape="rectangle" 图形的形状
corners 圆角
gradient 渐变色
padding  内边距
size 图片的大小
solid 内填充色   他和gradient 使用一个
stroke 边线
 -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <corners
        android:radius="10dp"
         />
    <gradient
        android:centerColor="#A0181818"
        android:endColor="#A0181818"
        android:startColor="#A0181818"
         />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
